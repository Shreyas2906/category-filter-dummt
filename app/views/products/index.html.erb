<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Size</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <div class="dropdown">
    <button class="Btn btn-primry" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    Filter Category
    </button>
  <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
      <% Category.all.each do |cat| %>
      <a class="dropdown-item" href="/categories/"><%= cat.name %> </a>  </a>|cat| [cat.name, cat.id]
      <% end %> 







    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.size %></td>
        <td><%= product.price %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
          <td><button><a href="/my_carts"><span class="btn-primry">Add to Cart</span></a></button></td>
        </td>


      </tr>
    <% end %>
  </tbody>
</table>

<br>

